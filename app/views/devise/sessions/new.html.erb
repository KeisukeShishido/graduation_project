<h2><%= t('devise.sessions.user.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :user_name, t('devise.sessions.user.user_name') %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.sessions.user.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.user.remember_me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('devise.sessions.user.sign_in_button') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
