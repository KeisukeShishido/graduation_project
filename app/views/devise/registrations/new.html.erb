<h2><%= t('devise.registrations.user.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :user_name, t('devise.registrations.user.user_name') %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email, t('devise.registrations.user.email') %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.registrations.user.password') %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.registrations.user.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.user.sign_up_button') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
